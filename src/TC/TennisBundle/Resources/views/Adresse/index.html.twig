{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Adresse list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Voie</th>
                <th>Codepostal</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Visible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('adresse_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numero }}</td>
                <td>{{ entity.voie }}</td>
                <td>{{ entity.codePostal }}</td>
                <td>{{ entity.ville }}</td>
                <td>{{ entity.pays }}</td>
                <td>{{ entity.visible }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('adresse_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('adresse_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('adresse_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
